        <p class="countdown">Launching in: <span id="timer"></span></p>
        <button class="notify-btn" onclick="notifyMe()">Notify Me</button>
    </div>
    <script>
        function startCountdown(duration) {
            let timer = duration, days, hours, minutes, seconds;
            setInterval(function () {
                days = Math.floor(timer / (24 * 3600));
                hours = Math.floor((timer % (24 * 3600)) / 3600);
                minutes = Math.floor((timer % 3600) / 60);
                seconds = Math.floor(timer % 60);
                document.getElementById("timer").innerText = `${days}d ${hours}h ${minutes}m ${seconds}s`;
                if (timer > 0) {
                    timer--;
                }
            }, 1000);
        }
        startCountdown(7 * 24 * 3600); // 7 days countdown

        function notifyMe() {
            alert("We will notify you when the site is live!");
        }
    </script>
</body>
